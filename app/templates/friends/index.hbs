<div class="row">
	<div class="col-sm-6">
		<table class="table">
			<thead>
				<tr>
					<th><span class="glyphicon glyphicon-user"></span></th>
					<th><span class="glyphicon glyphicon-edit"></span></th>
					<th><span class="glyphicon glyphicon-trash"></span></th>
				</tr>
			</thead>
			<tbody>
				{{#each friend in this}}
					<tr>
						<th>{{link-to friend.fullName 'friends.show' friend class="text-muted"}}</th>
						<th>{{link-to '<span class="glyphicon glyphicon-edit"></span>' 'friends.edit' friend}}</th>
						<th><a href="#" {{action 'delete' friend}}><span class="glyphicon glyphicon-trash"></span></a></th>
					</tr>
				{{/each}}
					<tr>
						<th>{{link-to '<span class="glyphicon glyphicon-plus"></span>' 'friends.new'}}</th>
					</tr>
			</tbody>
		</table>
	</div>
</div>