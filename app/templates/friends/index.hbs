<div class="row">
	<div class="col-sm-12">
		<table class="table">
			<thead>
				<tr>
					<th><span class="glyphicon glyphicon-user"></span>Name</th>
					<th><span class="glyphicon glyphicon-file"></span>Articles</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				{{#each friend in this}}
					<tr>
						<th>{{link-to friend.fullName 'articles' friend class="text-muted"}}</th>
						<th>{{totalArticles}}</th>
						<th><a href="#" {{action 'delete' friend}}><span class="glyphicon glyphicon-trash"></span></a></th>
					</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>